<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clipToPadding="true"
    android:fitsSystemWindows="true"

    tools:context=".activity.activity.EditActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_edit"
        android:background="@null"
        android:editable="true"
        android:gravity="top"
        android:hint="从这里输入便签"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1"
        android:textColorHint="@color/black_m"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/blue_m"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <com.fiona.notepad.view.EditTopView
        android:id="@+id/edit_top_view"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignBottom="@+id/toolbar_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
